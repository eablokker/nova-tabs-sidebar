{
    "identifier": "austenblokker.TabsSidebar",
    "name": "Tabs Sidebar",
    "organization": "Austen Blokker",
    "description": "Manage open files from the sidebar.",
    "version": "1.0",
    "categories": ["sidebars"],

    "main": "main.js",

    "activationEvents": [
        "onWorkspaceContains:*"
    ],

    "entitlements": {
        "process": true,
        "filesystem": "readonly"
    },

    "sidebars": [
        {
            "id": "tabs-sidebar",
            "name": "Tabs",
            "smallImage": "tabs-sidebar-small",
            "smallSelectedImage": "tabs-sidebar-small-selected",
            "largeImage": "tabs-sidebar-large",
            "largeSelectedImage": "tabs-sidebar-large-selected",
            "sections": [
                {
                    "id": "tabs-sidebar",
                    "name": "Open Files",
                    "allowMultiple": false,
                    "placeholderText": "No tabs are open.",
                    "placeholderImage": "tabs-sidebar-placeholder",
                    "headerCommands": [
                        {
                            "title": "‚Üë",
                            "image": "",
                            "tooltip": "Move Tab Up",
                            "command": "tabs-sidebar.up",
                            "when": "viewItem != null && eablokker.tabsSidebar.config.sortAlpha != true && eablokker.tabsSidebar.config.groupByKind != true && viewItem != 'first' && viewItem != 'only' && viewItem != 'kindGroup'"
                        },
                        {
                            "title": "‚Üì",
                            "image": "",
                            "tooltip": "Move Tab Down",
                            "command": "tabs-sidebar.down",
                            "when": "viewItem != null && eablokker.tabsSidebar.config.sortAlpha != true && eablokker.tabsSidebar.config.groupByKind != true && viewItem != 'last' && viewItem != 'only' && viewItem != 'kindGroup'"
                        },
                        {
                            "title": "Clean Up By Tab Bar Order",
                            "image": "__builtin.path",
                            "command": "tabs-sidebar.cleanUpByTabBarOrder",
                            "when": "eablokker.tabsSidebar.config.sortAlpha != true"
                        },
                        {
                            "title": "Clean Up Alphabetically",
                            "image": "__builtin.path",
                            "tooltip": "Clean Up Alphabetically",
                            "command": "tabs-sidebar.cleanUpByAlpha",
                            "when": "eablokker.tabsSidebar.config.sortAlpha != true"
                        },
                        {
                            "title": "Clean Up By Kind",
                            "image": "__builtin.branch",
                            "tooltip": "Clean Up By Kind",
                            "command": "tabs-sidebar.cleanUpByKind",
                            "when": "eablokker.tabsSidebar.config.sortAlpha != true"
                        },
                        {"separator": true},
                        {
                            "title": "Sort Alphabetically",
                            "image": "__builtin.path",
                            "tooltip": "Sort Alphabetically",
                            "command": "tabs-sidebar.sortByAlpha",
                            "state": "eablokker.tabsSidebar.config.sortAlpha == true"
                        },
                        {
                            "title": "Group By Kind",
                            "image": "__builtin.branch",
                            "tooltip": "Group By Kind",
                            "command": "tabs-sidebar.groupByKind",
                            "state": "eablokker.tabsSidebar.config.groupByKind"
                        }
                    ],
                    "contextCommands": [
                        {
                            "title": "Open",
                            "command": "tabs-sidebar.open",
                            "when": "viewItem != null && viewItem != 'kindGroup'"
                        },
                        {
                            "title": "Close Tab",
                            "command": "tabs-sidebar.close",
                            "when": "viewItem != null && viewItem != 'kindGroup'"
                        },
                        {"separator": true},
                        {
                            "title": "Move Tab Up",
                            "command": "tabs-sidebar.up",
                            "when": "viewItem != null && eablokker.tabsSidebar.config.sortAlpha != true && eablokker.tabsSidebar.config.groupByKind != true && viewItem != 'first' && viewItem != 'only' && viewItem != 'kindGroup'"
                        },
                        {
                            "title": "Move Tab Down",
                            "command": "tabs-sidebar.down",
                            "when": "viewItem != null && eablokker.tabsSidebar.config.sortAlpha != true && eablokker.tabsSidebar.config.groupByKind != true && viewItem != 'last' && viewItem != 'only' && viewItem != 'kindGroup'"
                        },
                        {"separator": true},
                        {
                            "title": "Show in Files Sidebar",
                            "command": "tabs-sidebar.showInFilesSidebar",
                            "when": "viewItem != null && viewItem != 'kindGroup'"
                        },
                        {
                            "title": "Show in Finder",
                            "command": "tabs-sidebar.showInFinder",
                            "when": "viewItem != null && viewItem != 'kindGroup'"
                        },
                        {"separator": true},
                        {
                            "title": "Copy Path",
                            "command": "tabs-sidebar.copyPath",
                            "when": "viewItem != null && viewItem != 'kindGroup'"
                        },
                        {
                            "title": "Copy Relative Path",
                            "command": "tabs-sidebar.copyRelativePath",
                            "when": "viewItem != null && viewItem != 'kindGroup'"
                        },
                        {"separator": true},
                        {
                            "title": "Clean Up By Tab Bar Order",
                            "command": "tabs-sidebar.cleanUpByTabBarOrder",
                            "when": "eablokker.tabsSidebar.config.sortAlpha != true"
                        },
                        {
                            "title": "Clean Up Alphabetically",
                            "command": "tabs-sidebar.cleanUpByAlpha",
                            "when": "eablokker.tabsSidebar.config.sortAlpha != true"
                        },
                        {
                            "title": "Clean Up By Kind",
                            "command": "tabs-sidebar.cleanUpByKind",
                            "when": "eablokker.tabsSidebar.config.sortAlpha != true"
                        },
                        {"separator": true},
                        {
                            "title": "Sort Alphabetically",
                            "command": "tabs-sidebar.sortByAlpha",
                            "state": "eablokker.tabsSidebar.config.sortAlpha == true"
                        },
                        {
                            "title": "Group By Kind",
                            "command": "tabs-sidebar.groupByKind",
                            "state": "eablokker.tabsSidebar.config.groupByKind"
                        }
                    ]
                }
            ]
        }
    ],

    "config": [
        {
            "key": "eablokker.tabs-sidebar.open-on-single-click",
            "title": "Open tab on single click",
            "description": "Disabling will open tab on double click or context menu only.",
            "type": "boolean",
            "default": true
        },
        {
            "key": "eablokker.tabs-sidebar.always-show-parent-folder",
            "title": "Always show parent folder next to file name",
            "description": "Disabling will only show parent folder when there are multiple files with the same name.",
            "type": "boolean",
            "default": false
        },
        {
            "key": "eablokker.tabs-sidebar.always-show-parent-folder",
            "title": "Show files count when grouping by kind",
            "description": "Whether to show the number of files in each group next to the group's name.",
            "type": "boolean",
            "default": false
        },
        {
            "key": "eablokker.tabs-sidebar.unsaved-symbol",
            "title": "Unsaved tab symbol",
            "description": "Symbol to display in tabs with unsaved changes. You can use emoji! üòÉ Leave blank for default.",
            "type": "string",
            "default": "‚óè"
        },
        {
            "key": "eablokker.tabs-sidebar.unsaved-symbol-location",
            "title": "Show unsaved tab symbol",
            "type": "enum",
            "values": [
                ["before-filename", "Before file name"],
                ["after-filename", "After file name, before folder name"],
                [null, "Never"]
            ],
            "default": "before-filename"
        }
    ]
}
