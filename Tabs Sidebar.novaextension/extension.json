{
    "identifier": "austenblokker.TabsSidebar",
    "name": "Tabs Sidebar",
    "organization": "Austen Blokker",
    "description": "Manage open files from the sidebar.",
    "version": "1.0",
    "categories": ["sidebars"],

    "main": "main.js",

    "activationEvents": [
        "onWorkspaceContains:*"
    ],

    "entitlements": {
        "filesystem": "readonly"
    },

    "sidebars": [
        {
            "id": "tabs-sidebar",
            "name": "Tabs",
            "smallImage": "tabs-sidebar-small",
            "smallSelectedImage": "tabs-sidebar-small-selected",
            "largeImage": "tabs-sidebar-large",
            "largeSelectedImage": "tabs-sidebar-large-selected",
            "sections": [
                {
                    "id": "tabs-sidebar",
                    "name": "Open Files",
                    "allowMultiple": false,
                    "placeholderText": "No tabs are open.",
                    "placeholderImage": "tabs-sidebar-placeholder",
                    "headerCommands": [
                        {
                            "title": "↑",
                            "image": "",
                            "tooltip": "Move Tab Up",
                            "command": "tabs-sidebar.up",
                            "when": "viewItem != null && eablokker.tabsSidebar.config.sortAlpha != true && viewItem != 'first'"
                        },
                        {
                            "title": "↓",
                            "image": "",
                            "tooltip": "Move Tab Down",
                            "command": "tabs-sidebar.down",
                            "when": "viewItem != null && eablokker.tabsSidebar.config.sortAlpha != true && viewItem != 'last'"
                        },
                        {
                            "title": "Clean Up Alphabetically",
                            "image": "__builtin.path",
                            "tooltip": "Clean Up Alphabetically",
                            "command": "tabs-sidebar.cleanUpByAlpha",
                            "when": "eablokker.tabsSidebar.config.sortAlpha != true"
                        },
                        {
                            "title": "Clean Up By Kind",
                            "image": "__builtin.branch",
                            "tooltip": "Clean Up By Kind",
                            "command": "tabs-sidebar.cleanUpByKind",
                            "when": "eablokker.tabsSidebar.config.sortAlpha != true"
                        },
                        {"separator": true},
                        {
                            "title": "Sort Alphabetically",
                            "image": "__builtin.path",
                            "tooltip": "Sort Alphabetically",
                            "command": "tabs-sidebar.sortByAlpha",
                            "state": "eablokker.tabsSidebar.config.sortAlpha == true"
                        },
                        {
                            "title": "Group By Kind",
                            "image": "__builtin.branch",
                            "tooltip": "Group By Kind",
                            "command": "tabs-sidebar.groupByKind",
                            "state": "eablokker.tabsSidebar.config.groupByKind"
                        }
                    ],
                    "contextCommands": [
                        {
                            "title": "Open",
                            "command": "tabs-sidebar.open",
                            "when": "viewItem != null"
                        },
                        {"separator": true},
                        {
                            "title": "Move Tab Up",
                            "command": "tabs-sidebar.up",
                            "when": "viewItem != null && eablokker.tabsSidebar.config.sortAlpha != true && viewItem != 'first'"
                        },
                        {
                            "title": "Move Tab Down",
                            "command": "tabs-sidebar.down",
                            "when": "viewItem != null && eablokker.tabsSidebar.config.sortAlpha != true && viewItem != 'last'"
                        },
                        {"separator": true},
                        {
                            "title": "Clean Up Alphabetically",
                            "command": "tabs-sidebar.cleanUpByAlpha",
                            "when": "eablokker.tabsSidebar.config.sortAlpha != true"
                        },
                        {
                            "title": "Clean Up By Kind",
                            "command": "tabs-sidebar.cleanUpByKind",
                            "when": "eablokker.tabsSidebar.config.sortAlpha != true"
                        },
                        {"separator": true},
                        {
                            "title": "Sort Alphabetically",
                            "command": "tabs-sidebar.sortByAlpha",
                            "state": "eablokker.tabsSidebar.config.sortAlpha == true"
                        },
                        {
                            "title": "Group By Kind",
                            "command": "tabs-sidebar.groupByKind",
                            "state": "eablokker.tabsSidebar.config.groupByKind"
                        },
                        {"separator": true},
                        {
                            "title": "Show in Finder",
                            "command": "tabs-sidebar.showInFinder",
                            "when": "viewItem != null"
                        }
                    ]
                }
            ]
        }
    ],

    "config": []
}
