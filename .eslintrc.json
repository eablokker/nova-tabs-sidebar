{
	"root": true,
	"env": {
		"es6": true,
		"node": true,
		"nova/nova": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended"
	],
	"parserOptions": {
		"sourceType": "module",
		"parser": "@typescript-eslint/parser"
	},
	"rules": {
			"indent": [
				"warn",
				"tab"
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-undef": [
				"warn"
			]
	},
	"plugins": [

	]
}
